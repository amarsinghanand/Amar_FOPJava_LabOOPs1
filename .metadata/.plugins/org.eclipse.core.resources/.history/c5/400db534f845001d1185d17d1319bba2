package com.gl.iitr.fsd.gp.fopjava;

public class Main {
	public static String WELCOME = "Welcome to ";

	public static void main(String[] args) {
		AdminDepartment ad = new AdminDepartment();
		//Output for Admin Department
		System.out.println(WELCOME+ad.departmentName());
		System.out.println(ad.getTodaysWork());	
		System.out.println(ad.getWorkDeadline());
		System.out.println(ad.isTodayAHoliday()+"\n");
		
		HrDepartment hr = new HrDepartment();
		//Output for Admin Department
		System.out.println(WELCOME+hr.departmentName());
		System.out.println(hr.doActivity());
		System.out.println(hr.getTodaysWork());	
		System.out.println(hr.getWorkDeadline());
		System.out.println(hr.isTodayAHoliday()+"\n");
		
		TechDepartment tech = new TechDepartment();
		//Output for Admin Department
		System.out.println(WELCOME+tech.departmentName());
		System.out.println(tech.doActivity());
		System.out.println(tech.getTodaysWork());	
		System.out.println(tech.getWorkDeadline());
		System.out.println(tech.isTodayAHoliday()+"\n");		

	}

}
